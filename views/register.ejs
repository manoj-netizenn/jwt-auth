<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Register</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .login-container {
        max-width: 400px;
        margin: 5rem auto;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .rules-container {
        max-width: 400px;
        margin: 1rem auto;
        padding: 15px;
      }
      .login-button {
        width: 100%;
        padding: 10px;
      }
      .requirements {
        font-size: 0.9rem;
        color: #666;
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
      }
      .requirements h5 {
        color: #333;
        margin-bottom: 10px;
      }
      .requirements ul {
        margin-bottom: 0;
      }
    </style>
  </head>
  <body>
    <div class="container">

      <div class="login-container">
        <h1 class="text-center mb-4">Register</h1>
        <form action="/register" method="post" onsubmit="return validateForm()">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              name="username"
              id="username"
              pattern="^[a-zA-Z_]{4,}$"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary login-button">
            Register
          </button>
        </form>
      </div>
      <div class="rules-container">
        <div class="requirements">
          <h5>Account Requirements</h5>
          <div class="row">
            <div class="col-md-12">
              <strong>Username:</strong>
              <ul>
                <li>Minimum 4 characters</li>
                <li>Only letters and underscores are allowed</li>
                <li>No numbers or special characters</li>
              </ul>
            </div>
            <div class="col-md-12 mt-2">
              <strong>Password:</strong>
              <ul>
                <li>At least 8 characters</li>
                <li>at least one uppercase letter</li>
                <li>at least one lowercase letter</li>
                <li>at least one number</li>
                <li>at least one  special character (@$!%*?&)</li>
              </ul>
            </div>
          </div>
        </div>
      </div>

    </div>

    <script>
      function validateForm() {
        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;

        const usernameRegex = /^[a-zA-Z_]{4,}$/;
        const passwordRegex =
          /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

        if (!usernameRegex.test(username)) {
          alert(
            "Username must be at least 4 characters long and can only contain letters and underscore"
          );
          return false;
        }

        if (!passwordRegex.test(password)) {
          alert("Password must meet all requirements");
          return false;
        }

        return true;
      }
    </script>
  </body>
</html>
